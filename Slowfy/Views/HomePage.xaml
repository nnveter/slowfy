        <ListView x:Name="TestView" SelectionMode="Multiple" SelectionChanged="TestView_SelectionChanged" ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="0,80,0,0"/>
